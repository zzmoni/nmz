---
import type { MarkdownLayoutProps } from "astro";

import Main from "./Main.astro";
import Header from "../components/Header.astro";

type Props = MarkdownLayoutProps<{
  cover: string;
  title: string;
}>;

const { cover, title } = Astro.props.frontmatter;
---

<Main title="zzm">
  <main>
    <Header />

    <div>
      <figure class="figure unselectable">
        <img
          src={cover}
          alt={title}
        />
      </figure>
    </div>

    <slot />
  </main>
</Main>

<style>
  main {
    max-width: 25rem;
    padding: 0rem 0.7rem 1rem 0.7rem;
    margin: auto;

    background-image: var(--background-img);
  }

  .figure {
    margin: 0;
    padding: 0.5rem 0;
  }

  .figure img {
    display: block;
    margin-left: auto;
    margin-right: auto;
    max-width: 40%;
    height: auto;
    border-radius: 10px;
  }

</style>