---
import Main from "../layouts/Main.astro";
import Reading from "../components/Reading.astro";
import Footer from "../components/Footer.astro";
import ViewSorter from "../components/ViewSorter.astro";

const homePicture = "/adashima.svg";
---

<Main title="zizi's gl bookshelf">
  <div class="home__details unselectable">
    <div class="home">
      <img
        src={homePicture}
        class="home__picture"
        alt="logo"
        width="130px"
        height="130px"
      />
      <div class="main_content">
        <h1>gl books</h1>
      </div>
    </div>
  </div>

  <!-- sort complete and reading -->
  <input class="check" type="radio" name="sort" id="sort-completed" checked>
	<input class="check" type="radio" name="sort" id="sort-reading">

  <div class="bookSorter unselectable">
    <div class="menu">
      <label for="sort-completed">completed</label>
      <label for="sort-reading">reading</label>
    </div>
  </div>

  <div class="books">
    <div class="book reading">
      <Reading />
    </div>

    <div class="book completed">
      <ViewSorter />
    </div>

  </div>

  <Footer />

</Main>

<style>
  .home {
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding: 0rem 0 0.5rem 0;
  }

  .main_content h1 {
    font-size: clamp(2rem, 2.5vw, 3rem);
  }

  .main_content > h1, .books p {
    padding: 0;
    margin-top: 0;
  }

  .home__details {
    flex: 1 0 300px;
    text-align: center;
  }

  /* sort */
  .bookSorter {
    padding: 1.2rem 0;
  }

  .menu {
    display: flex;
    justify-content: center;
	  width: 100%;
    gap: 10px;
  }

  label {
    font-size: clamp(0.8rem, 1vw, 1.3rem);
    cursor: pointer;
    padding: 0.3rem 1.3rem;
    position: relative;
    border: 1px solid var(--background-glass);
    &::before,
    &::after {
      position: absolute;
      top: 0;
      left: 0;
      border-color: var(--blue-green);
      border-radius: 1px;
      border-style: solid;
      transition: all 0.35s;
      content: "";
      z-index: 1;
    }
    &::before {
      width: 0;
      height: 100%;
      border-width: 1px 0 1px 0;
    }
    &::after {
      width: 100%;
      height: 0;
      border-width: 0 1px 0 1px;
    }
  }

  label:hover {
    border-color: var(--blue-green);
    color: var(--blue-green);
    &::before {
      width: 100%;
      border-width: 1px 0 1px 0;
    }
    &::after {
      height: 100%;
      border-width: 0 1px 0 1px;
    }
  }

  input.check {
	  display: none;
  }

  .books .book, .views .view {
    display: none;

    opacity: 1;

    animation-name: fadeInAnimation;
    animation-iteration-count: 1;
    animation-timing-function: ease-in;
    animation-duration: 0.5s;
  }

  /* sort complete and reading */
  #sort-completed:checked ~ .books .book[class*="completed"] {
    display: block;
  }

  #sort-reading:checked ~ .books .book[class*="reading"] {
    display: block;
  }




  a {
    color: var(--blue-green);
    padding: 0.5rem 2rem;
    padding-left: 0rem;
    border-radius: 10px;
    text-decoration: none;
  }

  .pic {
    padding: 0;
    border-radius: 0;
    height: 0px;
  }

</style>